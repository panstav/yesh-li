{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"ignorePatterns": [
		".cache",
		".vscode",
		"node_modules",
		"public"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"off"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"overrides": [
		{
			"files": [
				// all files inside top level test directory
				"test/*.js",
				// all files with .test.js extension
				"**/*.test.js"
			],
			"env": {
				"jest/globals": true
			},
			"globals": {
				"__dirname": "readonly",
				"require": "readonly"
			},
			"rules": {
				"no-import-assign": "off",
				"react/react-in-jsx-scope": "off"
			},
			"plugins": [
				"jest"
			],
			"settings": {
				"react": {
					"version": "detect"
				}
			},
			"extends": [
				"plugin:jest/recommended",
				"plugin:react/recommended"
			]
		}
	]
}